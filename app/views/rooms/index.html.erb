
<div class="container min-height">

  <h1 class="margin-btm-none"> Hello ! Your rooms :  </h1>
  <div class="row">
  <% @rooms.each do |room| %>
    <div class="col-xs-12 col-sm-4">
      <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path room.photo_url, width: 300, height: 200, crop: :fill %>');">
      <div class="card-category"><%= room.title %></div>
      <div class="card-description">
        <h2><%= room.description %></h2>
        <p class= "room-description"> <%= room.custom_message %></p>
      </div>
      <a class="card-link" href="#" ></a>
    </div>
    </div>

    <% end %>
  </div>

</div>



<div id="instafeed">
  <script src="./rooms/views/assets/javascripts/instafeed.min.js"></script>
</div>


