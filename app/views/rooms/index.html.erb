
<div class="container min-height">
  <div class="row">
  <h1 class="title-stylized"> Hello <%= @rooms.first.user.username %> ! </h1>
  <% @rooms.each do |room| %>
    <div class="col-xs-12 col-sm-4">
      <%= link_to room_path(room) do %>
        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path room.photo_url, width: 300, height: 200, crop: :fill %>');">
        <div class="card-category"><%= room.title %></div>
        <div class="card-description">
          <h2><%= room.description %></h2>
          <p class= "room-description"> <i><%= room.custom_message %></i> </p>
        </div>
        <div class= "card-user">
          <i class="fa fa-play-circle" aria-hidden="true"></i>
        </div>
      </div>
    <% end %>
    <div id = "playlist-box">
      <% room.tracks.each do |track| %>
        <h2 id = "playlist-stylized"><%= track.title %> - <%= track.artist %></h2>
      <% end %>
    </div>
  </div>
    <% end %>
  </div>

</div>

<div class="foot">
  <br>
    <h1 class="title">@weesound 2017 </h1>
    <br>
</div>
